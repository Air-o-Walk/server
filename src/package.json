{
  "name": "api-monitoreo-ambiental",
  "version": "1.0.0",
  "description": "API de Monitoreo Ambiental - Sistema universitario",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:api": "jest tests/api.test.js --verbose --forceExit",
    "test:logica": "jest tests/logica.test.js --verbose --forceExit",
	"docs": "jsdoc -c jsdoc.json"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000,
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "@turf/turf": "^7.3.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jsdoc": "^4.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
